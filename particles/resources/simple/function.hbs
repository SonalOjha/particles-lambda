{
  "Type" : "AWS::Lambda::Function",
  "Properties" : {
    "Code" : {
        "S3Bucket" : {
            "Ref" : "{{s3BucketName}}"
        },
        "S3Key" :  {
            "Ref" : "{{s3BucketKey}}"
        }
    },
    "Handler" : {
        "Ref": "{{functionHandler}}"
    },
    "MemorySize" : {
        "Ref": "{{functionMemorySize}}"
    },
    "Role" : {
        "Ref": "{{roleARN}}"
    },
    "Runtime" : {
        "Ref": "{{runtimeEnvironment}}"
    },
    "Timeout" : {
        "Ref": "{{functionTimeout}}"
    }
  }
}
